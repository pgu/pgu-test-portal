<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
            xmlns:g="urn:import:com.google.gwt.user.client.ui"
            xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

    <ui:style>
        .frame {
            width: 100%;
            height: 800px;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="container-fluid">
        <div class="row-fluid">
            <g:HTMLPanel ui:field="menu" addStyleNames="span2">
                <b:NavLink ui:field="goToEmployees" >Employees</b:NavLink>
                <b:NavLink ui:field="goToCareers" >Careers</b:NavLink>
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="applicationArea" addStyleNames="span10">
                <g:Frame ui:field="employeesFrame" addStyleNames="{style.frame}" />
                <g:Frame ui:field="careersFrame" addStyleNames="{style.frame}" />
            </g:HTMLPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 